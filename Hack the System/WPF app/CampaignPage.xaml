<Page x:Class="Wpf.CampaignPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf"
      xmlns:btcc="clr-namespace:Wpf.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
      Title="CampaignPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Center" x:Name="wp_campaign" Margin="100 0 100 20"  Background="Transparent" Grid.Row="1">
        </WrapPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="BACK" Command="{Binding Nav_ToPlayMenuPageCommand}" Style="{StaticResource MainMenuStyle}" Width="300" Margin="0 0 30 0" />
        </StackPanel>
        
    </Grid>
</Page>
